<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:layout_width="match_parent"
    android1:layout_height="match_parent"
    android1:layout_margin="@android:dimen/app_icon_size"
    android:gravity="center_vertical|center_horizontal|center"
    tools:context=".MainActivity" >

 >

        <TableRow
            android1:id="@+id/tableRow2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <EditText
                android1:id="@+id/etLogin"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:contentDescription="Login"
                android1:ems="10"
                android1:hint="Логин"
                android1:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <EditText
                android1:id="@+id/etPassword"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:contentDescription="Password"
                android1:ems="10"
                android1:hint="Пароль"
                android1:inputType="textPassword" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android1:id="@+id/tableRow4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >

            <Button
                android1:id="@+id/btnLogin"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:onClick="onClick"
                android1:text="Войти" />

        </TableRow>
  </TableLayout>
